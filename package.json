{
  "name": "art-shop-app",
  "version": "1.0.0",
  "description": "Application e-commerce d'art - Monorepo fullstack Angular + NestJS",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd apps/web && npm install && cd ../api && npm install && cd ../../packages/shared && npm install",
    "install:web": "cd apps/web && npm install",
    "install:api": "cd apps/api && npm install",
    "install:shared": "cd packages/shared && npm install",
    "dev": "docker-compose up",
    "dev:detached": "docker-compose up -d",
    "dev:build": "docker-compose up --build",
    "dev:web": "cd apps/web && npm start",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:both": "concurrently \"npm run dev:web\" \"npm run dev:api\" --names \"WEB,API\" --prefix-colors \"cyan,yellow\"",
    "build": "npm run build:shared && npm run build:web && npm run build:api",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd apps/web && npm test",
    "test:api": "cd apps/api && npm test",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd apps/api && npm run lint",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:web": "docker-compose logs -f web",
    "docker:logs:api": "docker-compose logs -f api",
    "docker:logs:db": "docker-compose logs -f db",
    "docker:rebuild": "docker-compose down && docker-compose up --build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "db:shell": "docker-compose exec db psql -U artshop_user -d artshop_db",
    "db:backup": "docker-compose exec db pg_dump -U artshop_user artshop_db > backup.sql",
    "db:restore": "docker-compose exec -T db psql -U artshop_user -d artshop_db < backup.sql",
    "redis:cli": "docker-compose exec redis redis-cli",
    "clean": "npm run clean:web && npm run clean:api && npm run clean:shared",
    "clean:web": "cd apps/web && rm -rf node_modules dist .angular",
    "clean:api": "cd apps/api && rm -rf node_modules dist",
    "clean:shared": "cd packages/shared && rm -rf node_modules dist"
  },
  "keywords": [
    "e-commerce",
    "art",
    "monorepo",
    "angular",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
